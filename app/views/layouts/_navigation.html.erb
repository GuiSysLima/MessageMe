<% if user_signed_in? %>
  <%= link_to "Chatroom", chatroom_path, class: "item"%>
  <%= link_to my_friends_path, class: "item" do %>
    My Friends
    <% if current_user.friend_requests.any? %>
      <div class="ui mini red circular label">
        <%= current_user.friend_requests.count %>
      </div>
    <% end %>
  <% end %>
  <%= link_to "Search Users", search_friends_path, class: "item" %>
<% end %>

<div class="right menu">
  <% if user_signed_in? %>
    <div class="ui dropdown item">
      <%= current_user.username %> <i class="dropdown icon"></i>
      <div class="menu">
        <%= link_to "Profile", edit_user_registration_path, class: "item" %>
        <div class="divider"></div>
        <%= link_to "Logout", destroy_user_session_path, class: "item" %>
      </div>
    </div>
  <% else %>
    <div class="item">
      <%= link_to "Log in", new_user_session_path, class: "ui primary button" %>
    </div>
  <% end %>
</div>